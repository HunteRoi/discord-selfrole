{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["lib/*", "**/node_modules/**"],
  "typedocOptions": {
    "entryPointStrategy": "expand",
    "entryPoints": ["src/index.ts"],
    "out": "docs/api-docs",
    "excludePrivate": true,
    "excludeExternals": true,
    "hideGenerator": true,
  }
}
